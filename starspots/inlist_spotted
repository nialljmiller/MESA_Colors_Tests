! Load MS model and compute photometry WITH starspots
! Spot parameters from Cao et al. 2022 and Somers et al. 2015

&star_job
   read_extra_star_job_inlist(1) = .true.
   extra_star_job_inlist_name(1) = 'inlist_common'

   ! Load the saved MS model
   load_saved_model = .true.
   load_model_filename = 'ms_model.mod'

   required_termination_code_string = 'max_age'

/ ! end of star_job namelist

&eos
   read_extra_eos_inlist(1) = .true.
   extra_eos_inlist_name(1) = 'inlist_common'
/ ! end of eos namelist

&kap
   read_extra_kap_inlist(1) = .true.
   extra_kap_inlist_name(1) = 'inlist_common'
/ ! end of kap namelist

&controls
   read_extra_controls_inlist(1) = .true.
   extra_controls_inlist_name(1) = 'inlist_common'

   ! Enable starspots (YREC SPOTS formalism)
   ! fspot: spot filling factor (coverage fraction)
   ! xspot: temperature contrast T_spot/T_photosphere
   do_starspots = .true.
   fspot = 0.34d0   ! 34% coverage (Cao et al. 2022)
   xspot = 0.85d0   ! spots 15% cooler than photosphere

   ! Run for 10 Myr from loaded model (just need photometry)
   max_age = 5.01d9

   ! Output
   log_directory = 'LOGS_spotted'
   write_profiles_flag = .false.
   star_history_name = 'history_spotted.data'

/ ! end of controls namelist

&pgstar
   read_extra_pgstar_inlist(1) = .true.
   extra_pgstar_inlist_name(1) = 'inlist_common'

   HR_file_prefix = 'hr_spotted_'

   HR_logT_min = 3.5
   HR_logT_max = 3.8
   HR_logL_min = -1.5
   HR_logL_max = 0.5

/ ! end of pgstar namelist

&colors
   read_extra_colors_inlist(1) = .true.
   extra_colors_inlist_name(1) = 'inlist_common'

   colors_results_directory = 'COLORS_spotted'

/ ! end of colors namelist
