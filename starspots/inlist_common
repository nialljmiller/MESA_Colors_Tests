! Common settings shared across all starspots inlists

&star_job
   history_columns_file = 'history_columns.list'
   profile_columns_file = 'profile_columns.list'

   pgstar_flag = .true.
   save_pgstar_files_when_terminate = .true.

/ ! end of star_job namelist

&eos
/ ! end of eos namelist

&kap
   Zbase = 0.0142

   ! AGSS09 abundances
   kap_file_prefix = 'a09'
   kap_lowT_prefix = 'lowT_fa05_a09p'
   kap_CO_prefix = 'a09_co'
/ ! end of kap namelist

&controls
   ! Atmosphere
   atm_option = 'table'
   atm_table = 'photosphere'

   ! Mixing
   mixing_length_alpha = 1.82
   MLT_option = 'Cox'

   ! Solver
   use_gold2_tolerances = .true.

   ! Mesh and timestep
   mesh_delta_coeff = 1.0
   time_delta_coeff = 1.0
   varcontrol_target = 1d-4

   ! Output
   history_interval = 1
   terminal_interval = 50
   write_header_frequency = 10
   photo_interval = 100

/ ! end of controls namelist

&pgstar
   pgstar_interval = 20
   file_white_on_black_flag = .true.
   file_device = 'png'

   HR_win_flag = .false.
   HR_file_flag = .true.
   HR_file_dir = 'pgstar_out'
   HR_file_prefix = 'hr_'
   HR_file_interval = 50
   HR_win_width = 9
   HR_win_aspect_ratio = 1.0

/ ! end of pgstar namelist

&colors
   use_colors = .true.

   ! Kurucz atmosphere grid
   stellar_atm = '/data/colors_data/stellar_models/Kurucz2003all/'

   ! LSST filters for survey-era demonstration
   instrument = '/data/colors_data/filters/LSST/LSST'

   ! 10 pc for absolute magnitudes
   distance = 3.0857d19

   ! AB magnitude system (standard for LSST)
   mag_system = 'AB'

/ ! end of colors namelist
