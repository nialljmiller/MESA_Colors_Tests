! Evolve 0.7 Msun star to main sequence equilibrium
! Saves model at 5 Gyr for spotted/unspotted comparison

&star_job
   read_extra_star_job_inlist(1) = .true.
   extra_star_job_inlist_name(1) = 'inlist_common'

   ! Start from pre-main-sequence
   create_pre_main_sequence_model = .true.

   ! Network
   change_net = .true.
   new_net_name = 'pp_cno_extras_o18_ne22.net'

   ! Composition - solar
   set_uniform_initial_composition = .true.
   initial_h1 = 0.7154
   initial_he3 = 1d-4
   initial_he4 = 0.2703
   initial_zfracs = 6  ! AGSS09

   ! Save model at termination
   save_model_when_terminate = .true.
   save_model_filename = 'ms_model.mod'

   required_termination_code_string = 'max_age'

/ ! end of star_job namelist

&eos
   read_extra_eos_inlist(1) = .true.
   extra_eos_inlist_name(1) = 'inlist_common'
/ ! end of eos namelist

&kap
   read_extra_kap_inlist(1) = .true.
   extra_kap_inlist_name(1) = 'inlist_common'
/ ! end of kap namelist

&controls
   read_extra_controls_inlist(1) = .true.
   extra_controls_inlist_name(1) = 'inlist_common'

   ! Initial mass
   initial_mass = 0.7

   ! Evolve to 5 Gyr (well onto main sequence)
   max_age = 5d9

   ! No starspots during evolution phase
   do_starspots = .false.

   ! Output
   log_directory = 'LOGS_evolve'
   write_profiles_flag = .false.
   star_history_name = 'history_evolve.data'

/ ! end of controls namelist

&pgstar
   read_extra_pgstar_inlist(1) = .true.
   extra_pgstar_inlist_name(1) = 'inlist_common'

   HR_file_prefix = 'hr_evolve_'

   ! Plot bounds for cool dwarf
   HR_logT_min = 3.5
   HR_logT_max = 3.8
   HR_logL_min = -1.5
   HR_logL_max = 0.5

/ ! end of pgstar namelist

&colors
   read_extra_colors_inlist(1) = .true.
   extra_colors_inlist_name(1) = 'inlist_common'

   colors_results_directory = 'COLORS_evolve'

/ ! end of colors namelist
